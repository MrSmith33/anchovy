module anchovy.graphics.texrectarray;

import derelict.opengl3.gl3;

import anchovy.core.types;

struct TexVertex
{
	this(int a, int b, int c, int d)
	{
		x = cast(short) a;
		y = cast(short) b;
		s = cast(ushort) c;
		t = cast(ushort) d;
	}

align(1):
	short x, y;
	ushort s, t;
}


class TexRectArray
{
	TexVertex[] vertieces;
	this()
	{
		glGenVertexArrays(1, &vao);
		glGenBuffers(1,&vbo);
	}

	void close()
	{
		glDeleteVertexArrays(1, &vao);
		glDeleteBuffers(1,&vbo);
	}

	TexRectArray appendQuad(Rect geometryQuad, Rect textureQuad)
	{
		alias geometryQuad gq;
		alias textureQuad tq;
		TexVertex[4] vert;
		vert[0] = TexVertex(gq.x, gq.y + gq.height, tq.x, tq.y + tq.height);//lower left
		vert[1] = TexVertex(gq.x, gq.y, tq.x, tq.y);//upper left
		vert[2] = TexVertex(gq.x + gq.width, gq.y, tq.x + tq.width, tq.y);//upper right
		vert[3] = TexVertex(gq.x + gq.width, gq.y+ gq.height, tq.x + tq.width, tq.y + tq.height);//lower right

		vertieces ~= vert[0];
		vertieces ~= vert[1];
		vertieces ~= vert[2];
		vertieces ~= vert[0];
		vertieces ~= vert[2];
		vertieces ~= vert[3];
		return this;
	}

	void load()
	{
		glBindVertexArray(vao);
		glBindBuffer(GL_ARRAY_BUFFER, vbo );
		glBufferData(GL_ARRAY_BUFFER, vertieces.length * TexVertex.sizeof, vertieces.ptr, GL_STATIC_DRAW);
		glEnableVertexAttribArray(0);
		glEnableVertexAttribArray(1);
		glVertexAttribPointer(0, 2, GL_SHORT, GL_FALSE, 4*short.sizeof, null);
		glVertexAttribPointer(1, 2, GL_UNSIGNED_SHORT, GL_FALSE, 4*short.sizeof, cast(void*)(2*short.sizeof));

		glBindBuffer(GL_ARRAY_BUFFER,0);
		glBindVertexArray(0);
	}

	void bind()
	{
		glBindVertexArray(vao);
	}

	void draw()
	{
		glDrawArrays(GL_TRIANGLES, 0, cast(uint)vertieces.length);
	}

	void unbind()
	{
		glBindVertexArray(0);
	}

	uint vao, vbo;
}
