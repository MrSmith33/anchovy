module anchovy.gui.controls.internals.draggable;

import anchovy.gui.all;

alias void delegate(IWidget widget, ref ivec2 deltaPosition) OnDragHandler;

class Draggable : GuiWidget
{
	this(Rect initRect, in string initStyleName = "none", GuiSkin initSkin = null)
	{
		super(initRect, initStyleName, initSkin);
	}

	override bool pointerPressed(ivec2 pointerPosition, PointerButton button)
	{
		if (!_staticRect.contains(pointerPosition)) return false;
		if (button == PointerButton.PB_LEFT && _isDraggable)
		{
				window.inputOwnerWidget = this;
				_dragPosition = pointerPosition;
				return true;
		}
		return false;
	}
	
	override bool pointerMoved(ivec2 newPointerPosition)
	{
		if (window.inputOwnerWidget is this)
		{
			ivec2 deltaPos = newPointerPosition - _dragPosition;
			_dragPosition = newPointerPosition;

			if (_onDrag) _onDrag(this, deltaPos);

			_rect.move(deltaPos);
			calcStaticRect(_parent.staticRect);

			return true;
		}
		return false;
	}
	
	override bool pointerReleased(ivec2 pointerPosition, PointerButton button)
	{
		if (window.inputOwnerWidget is this)
		{
			window.inputOwnerWidget = null;
		}
		if (!_staticRect.contains(pointerPosition)) return false;

		return true;
	}

	@property
	{
		bool isDraggable(bool draggable)
		{
			return _isDraggable = draggable;
		}

		bool isDraggable()
		{
			return _isDraggable;
		}
	}

	@property
	{
		///
		OnDragHandler onDrag(OnDragHandler newHandler)
		{ 
			return _onDrag = newHandler;
		}
		/// ditto
		OnDragHandler onDrag()
		{ 
			return _onDrag;
		}
	}

protected:

	bool _isDraggable = true;

	/// Used for calculating dragging delta position.
	ivec2 _dragPosition;

	OnDragHandler _onDrag;
}

