module anchovy.graphics.font.fontmanager;


import derelict.opengl3.gl3;

import anchovy.core.types;
import anchovy.graphics.texture;
public import anchovy.graphics.font.font;
import anchovy.graphics.font.textureatlas;
debug import std.stdio;


static const dchar[] asciiChars = "0123456789!\"#$%&'()*+,-./:;<=>?@[\\]^_`{|}~ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ";

class FontManager
{
	this()
	{
		texAtlas = new TextureAtlas(standartAtlasSize, standartAtlasSize);
		cache ~= asciiChars;
		tex = new Texture(texAtlas.getBitmap, TextureTarget.target2d, TextureFormat.r);
		fonts = new IdArray!Font;
	}

	uint createFont(in string filename, in uint size)
	{
		debug writeln(filename, " ", size);
		Font newFont = new Font(filename, texAtlas, cache.idup, size);
		assert(newFont);
		uint newId = fonts.add(newFont);
		isTextureDirty = true;
		return newId;
	}

	Texture getFontAtlasTex()
	{
		if (isTextureDirty)
		{
			tex.reload();
			isTextureDirty = false;
		}
		return tex;
	}

	Font getFont(in uint id)
	{
		return fonts[id];
	}

	ref dchar[] charCache() @property
	{
		return cache;
	}

private:

	static const ushort standartAtlasSize = 256;

	dchar[] cache;
	IdArray!Font fonts;
	TextureAtlas texAtlas;
	Texture tex;
	bool isTextureDirty = true;
}