module anchovy.graphics.font.textureatlas;

import std.stdio;

import anchovy.utils.rectbinpacker;
import anchovy.graphics.texture;
import anchovy.core.math;
import anchovy.core.types;


class InsertException : Exception
{
	this(string msg, string file = __FILE__, size_t line = __LINE__)
	{
		super(msg, file, line);
	}
}

///Can be used to tightly store small images in big atlas, such as font glyps, or lightmaps etc.
class TextureAtlas
{
	this(in uint size)
	{
		binPacker = new RectBinPacker(size, size);
		bitmap = new Bitmap(size, size, 1);
	}
	this(in uint width, in uint height)
	{
		binPacker = new RectBinPacker(width, height);
		bitmap = new Bitmap(width, height, 1);
	}

	/++
	 + Returns: position of inserted node, or throws if not enough space
	 +/
	uvec2 insert(in uint width, in uint height)
	{
		Node* node = binPacker.insert(width, height);

		if (node is null)
		{
			if (_autoGrow)
			{
				if (bitmap.width >= bitmap.height)
				{
					if (bitmap.height >= _maxAtlasSize)
					{
						throw new InsertException("Texture atlas is full. Max atlas size reached");
					}

					bitmap.data ~= new ubyte[bitmap.height*bitmap.width];
					delete binPacker;
					binPacker = new RectBinPacker(bitmap.width, bitmap.height, 0, bitmap.height);
					bitmap.height *= 2;
				}
				else
				{
					ubyte[] newData = new ubyte[bitmap.height*bitmap.width*2];
					for(uint y = 0; y < bitmap.height; ++y)
					{
						newData[bitmap.width*y*2..bitmap.width*y*2+bitmap.width] = bitmap.data[bitmap.width*y..bitmap.width*(y+1)];
					}

					delete bitmap.data;
					bitmap.data = newData;
					delete binPacker;
					binPacker = new RectBinPacker(bitmap.width, bitmap.height, bitmap.width, 0);
					bitmap.width *= 2;
				}

				node = binPacker.insert(width, height);
			}
			else
			{
				throw new InsertException("Texture atlas is full");
			}
		}

		return uvec2(node.rect.x, node.rect.y);
	}

	ref Bitmap getBitmap()
	{
		return bitmap;
	}

	bool autoGrow(in bool allowAutoGrow) @property
	{
		return _autoGrow = allowAutoGrow;
	}

	bool autoGrow() @property
	{
		return _autoGrow;
	}

private:

	bool _autoGrow = true;
	uint _maxAtlasSize = 8192;  //2^13

	Bitmap bitmap;
	RectBinPacker binPacker;
}